<% provide(:username, current_user.username) %>
<% provide(:page, "commissions") %>

<div class="wrapper">
  <center>
    <h2 style="color: #08C">Edit Post #<%= @post.id %></h2>
    <br />
    <%= simple_form_for :edited, url:{controller: :posts, action: :update, post_id: @post.id} do |f| %>
    <%= f.input :title, label: false, input_html: {value: @post.title} %>
    <%= f.input :body, as: :text ,label: false, input_html: {value: @post.body, cols: 30, rows: 5} %>
    <button type="submit" class="btn btn-default btn-primary">&nbsp;<i class="icon-edit icon-white"></i>&nbsp; Save Changes &nbsp;&nbsp;</button>
    <% end %>
  </center>
</div>
